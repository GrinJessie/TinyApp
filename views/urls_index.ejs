
<% include partials/_header.ejs%>


<h1>We offer URL shortners!</h1>

<% if (!loginStatus) { %>
  <h3>Error: log in to continue.</h3>
<% } %>

<% if (loginStatus && Object.keys(urlDatabase).length === 0) { %>
  <h3>ERROR: You haven't create any url shortners. Start now!</h3>
<% } %>


<ul>
  <% for (let shortURL in urlDatabase) { %>
  <li style="margin: 20px;">


    <%= shortURL %>  ➡ <a href="<%= urlDatabase[shortURL].longURL%>"><%= urlDatabase[shortURL].longURL %></a>

      <a href="/urls/<%= shortURL %>"><button style="background: none; border: none; text-decoration: underline;">Edit</button></a>

    <form action="/urls/<%= shortURL %>/delete" method="POST" style="display: inline-block">
      <button style="background: none; border: 1px solid grey; border-radius: 100px;">Delete🗑️</button>
    </form>
  </li>
  <% } %>

</ul>

<a href="/urls/new">Click to shorten a new url</a>

</body>
</html>
